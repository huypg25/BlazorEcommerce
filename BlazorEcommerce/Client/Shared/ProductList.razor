<ul class = "list-unstyled">
    @foreach (var product in Products){
        <li class = "media my-3">
            <div class = "media-img-wrapper mr-2">
                <a href="#">
                    <img class = "media-img" src="@product.ImageUrl" alt = "@product.Title">
                </a>
            </div>
           <div class = "media-body">
               <a href = "#">
                   <h4 class = "mb-0">   
                       @product.Title
                   </h4>
               </a>
               <p>@product.Decription</p>
                <h5 class = "price">
                    $@product.Price
                </h5>
           </div>
        </li>
    
    
    }
</ul>




